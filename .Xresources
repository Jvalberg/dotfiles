! Urxvt
!
URxvt.buffered: true
URxvt.cursorColor: #395573
URxvt.cursorUnderline: false
URxvt.cursorBlink: false
URxvt.geometry: 80x22
URxvt.transparent: true 
URxvt.shading: 20
URxvt*urgentOnBell: true
URxvt.lineSpace: 1
URxvt.letterSpace: -2
URxvt*scrollBar_right: false
URxvt*scrollBar: false
URxvt*borderLess: false

! Font settings
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
!Xft.dpi: 108
Xft.dpi: 96
Xft.rgba: rgb
 
! -- Fonts -- !
URxvt.font:xft:dejavu sans mono:medium:size=12
URxvt.boldFont:xft:dejavu sans mono:medium:size=12
!URxvt.font:xft:droid sans mono slashed:size=10.5
!URxvt.boldFont:xft:droid sans mono slashed:size=10.5
!URxvt.font: xft:Luxi Mono:regular:size=10.5
!URxvt.boldFont: xft:Luxi Mono:regular:size=10.5
 
!! perl extensions
URxvt.perl-ext:             default,url-select,clipboard
 
! Nastavuje kopirovani
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy
 
! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false
 
! -- Xterm settings -- !
xterm*termName: xterm-256color
XTerm*locale: true
xterm*cursorColor: #395573
xterm*toolBar: false
xterm*scrollBar: false
xterm*rightScrollBar: false
xterm*background: #1A1A1A
xterm*foreground: #999999
xterm*faceName: inconsolatazi4:size=10
xterm*allowBoldFonts: false
xterm*geometry: 120x28


